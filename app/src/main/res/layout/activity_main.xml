<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="com.hramovnik.reactiontest"
    xmlns:app2="com.hramovnik.reactiontest"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.hramovnik.reactiontest.MainActivity">

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/progressBar"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Начать тест"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:id="@+id/buttonStartStopTest"
        android:layout_above="@+id/progressBar"
        android:layout_centerHorizontal="true"
        style="@android:style/Widget.Button"
        android:elevation="0dp" />

    <TextView
        android:text="Результат"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/tvResult"
        android:gravity="center"
        android:textSize="18sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <RadioGroup
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_weight="1">

                <RadioButton
                    android:text="Сенсомоторный тест"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButton1"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_weight="1"
                    android:checked="true" />

                <RadioButton
                    android:text="КЧСМ Тест"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/radioButton1"
                    android:layout_alignParentStart="true"
                    android:id="@+id/radioButton2"
                    android:layout_weight="1" />

                <RadioButton
                    android:text="КЧСМ - 2 Тест"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/radioButton2"
                    android:layout_alignParentStart="true"
                    android:id="@+id/radioButton3"
                    android:layout_weight="1" />

            </RadioGroup>

            <TextView
                android:text="Описание"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvDescription"
                android:textSize="18sp"
                android:layout_weight="1"
                android:layout_marginTop="42dp"
                android:layout_marginStart="20dp"
                android:layout_below="@+id/radioGroup"
                android:layout_alignStart="@+id/radioGroup" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
